<vbox width="100%" style="padding: 5px;" height="100%">
    <style>
        .label{
            font: 10px solid black;
        }
    </style>
    <hbox width="100%" height="10%">
        <label text="Introducir datos manualmente" horizontalAlign="center"/>
        <textfield id="rawData" placeholder="1,10,100,..., etc." restrictChars="0-9,." width="100%" horizontalAlign="right"/>
    </hbox>
    <hbox width="100%" height="10%">
        <button id="loadRaw"     text="Cargar Datos manualmente" width="50%"/>
        <button id="loadFile"     text="Cargar Datos mediante archivo de texto (.txt)" width="50%"/>
    </hbox>
    <hbox id="measureOfDispersion" width="100%" height="10%">
        <button id="mean"       text="Calcular Promedio"  width="33%"/>
        <button id="range"          text="Calcular Rango"  width="34%"/>
        <button id="variance"       text="Calcular Varianza"  width="33%"/>
    </hbox>
        <hbox id="measureOfDispersion_2" width="100%" height="10%">
        <button id="standartDeviation"     text="Calcular Desviacion Estandar"  width="33%"/>
        <button id="coefOfVar"              text="Calcular Coeficiente de variacion"  width="34%"/>
        <button id="medianDeviation"       text="Calcular Desviacion Media"  width="33%"/>
    </hbox>
    <hbox id="measureOfDispersionD" width="100%" height="20%">
        <label id="meanDisplay" text="" width="34%" textAlign="center"/>
        <label id="rangeDisplay" text="" width="33%" textAlign="center"/>
        <label id="varianceDisplay" text="" width="33%" textAlign="center"/>
    </hbox>
    <hbox id="measureOfDispersionD_2" width="100%" height="20%">
        <label id="standartDeviationDisplay" text="" width="33%" textAlign="center"/>
        <label id="coefOfVarDisplay" text="" width="34%" textAlign="center"/>
        <label id="medianDeviationDisplay" text="" width="33%" textAlign="center"/>
    </hbox>
